<CustButton@Button>:
    font_size: 32

<CalcGridLayout>:
    rows: 5
    padding: 10
    spacing: 10

    # Display for the current input
    BoxLayout:
        size_hint_y: None
        height: 80
        TextInput:
            id: entry
            font_size: 32
            multiline: False
            readonly: True
            halign: "right"

    # Number and operation buttons
    GridLayout:
        cols: 4
        spacing: 10

        CustButton:
            text: "7"
            on_press: root.update_display(self.text)
        CustButton:
            text: "8"
            on_press: root.update_display(self.text)
        CustButton:
            text: "9"
            on_press: root.update_display(self.text)
        CustButton:
            text: "/"
            on_press: root.update_display(self.text)

        CustButton:
            text: "4"
            on_press: root.update_display(self.text)
        CustButton:
            text: "5"
            on_press: root.update_display(self.text)
        CustButton:
            text: "6"
            on_press: root.update_display(self.text)
        CustButton:
            text: "*"
            on_press: root.update_display(self.text)

        CustButton:
            text: "1"
            on_press: root.update_display(self.text)
        CustButton:
            text: "2"
            on_press: root.update_display(self.text)
        CustButton:
            text: "3"
            on_press: root.update_display(self.text)
        CustButton:
            text: "-"
            on_press: root.update_display(self.text)

        CustButton:
            text: "0"
            on_press: root.update_display(self.text)
        CustButton:
            text: "."
            on_press: root.update_display(self.text)
        CustButton:
            text: "="
            on_press: root.calculate_result()
        CustButton:
            text: "+"
            on_press: root.update_display(self.text)

    # Clear button
    BoxLayout:
        size_hint_y: None
        height: 80
        CustButton:
            text: "AC"
            on_press: root.clear_display()